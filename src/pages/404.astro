---
import { Image } from "astro:assets";
// import aboutImg from "@/assets/about-astro.png";
import aboutImg from "@/assets/404.png";
import PageLayout from "@/layouts/Base.astro";

const meta = {
	description: "Oops! It looks like this page does not exist!",
	title: "Oops! The page is missing!",
};
---

<PageLayout meta={meta}>
	<h1 class="title mb-6">404 | Page Not Found</h1>
	<p class="mb-8">Please use the navigation to find your way back</p>
	<div class="my-4 grid justify-center">
		<Image
			alt="A portrait image with 04 written in the image."
			class="shadow-lg rounded-lg"
			loading="eager"
			src={aboutImg}
		/>
	</div>
</PageLayout>
