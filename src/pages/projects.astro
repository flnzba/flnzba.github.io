---
//import { Image } from "astro:assets";
//import aboutImg from "@/assets/about-astro.png";
import projectspdf from "@/assets/projects_Florian_Zeba.pdf"
import PageLayout from '@/layouts/Base.astro';
import projectList from '../data/projectList.json';

const meta = {
	description: "I'm a starter theme for Astro.build",
	title: 'Projects',
};
---

<PageLayout meta={meta}>
	<div class='space-y-6'>
		<h1 class='title'>Projects</h1>
		<p class='mb-8'>
			Discover the breadth and depth of my expertise through this curated
			selection of projects. Each project here is a testament to my
			commitment to excellence, innovation, and the seamless integration
			of technology in solving complex problems. From advanced data
			architectures to efficient backend solutions and cutting-edge
			machine learning applications, youâ€™ll find examples of how I
			transform ideas into reality. Dive in to see how I apply rigorous
			engineering principles and creative problem-solving to deliver
			tangible results.
		</p>
		<p class='mb-4'>
			For now, there is a Download-Link for some of the projects.
		</p>
		<button
			class='bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'
		>
			<a href={projectspdf}>Open</a>
		</button>
		<button
			class='bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'
		>
		<a href={projectspdf} download>Download</a>
		</button>

		<p>Coming Soon: Dedicated Showcase for all Projects</p>
		<!-- <div class="flex justify-center">
			<Image
				alt="A cartoon cactus looking at the 'Astro.build' logo"
				fetchpriority="high"
				loading="eager"
				src={aboutImg}
			/>
		</div> -->

			<!-- Loads project data via json file -->
		<section class='mt-16'>
			<h2 class='title mb-4 text-xl'>Projects</h2>
			<dl class='space-y-4'>
				{projectList.map(project => (
					<div class='flex flex-col gap-2 sm:flex-row'>
						
						<span class='flex min-w-24'>
							<a
								class='cactus-link'
								href={project.href}
								rel='noreferrer'
								target='_blank'
							>
								{project.number}
							</a>
							:
						</span>
						<h2 class="min-w-48 font-bold">{project.title}</h2>
						<p>{project.desc}</p>
					</div>
				))}
			</dl>
		</section>
	</div>
</PageLayout>
