	<main transition:animate="slide">
		<h1 class='heading1'>Florian Zeba</h1>

		<Navbar/>

		<ul role='list' class='link-card-grid'>
			{projectsfiltered.map(
				projects => 
				<Card
				title={projects.frontmatter.title}
				body={projects.frontmatter.subtitle}
				href={projects.url}/>
			)}
		</ul>

