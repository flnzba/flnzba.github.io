---
import projectList from '../data/projectList.json';
// import logoImg from "@/assets/fz-logo.png";
---

<!-- Masonry grid container -->
<!-- Drop Shadow in Tailwind is for "text-outline" -->
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
    {projectList.map(project => (
        <div class="group relative cursor-pointer rounded-md overflow-clip">
            <img src={project.image} alt={project.number} class="w-full object-cover rounded-md shadow-lg opacity-50" />
            <div class="absolute inset-0 bg-slate-800 bg-opacity-50 opacity-75 flex items-center justify-center group-hover:opacity-100 transition-opacity duration-300">
                <p class="text-white font-bold text-lg break-normal p-5 drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,1)]">{project.title}</p>
            </div>
        </div>
    ))}
</div>