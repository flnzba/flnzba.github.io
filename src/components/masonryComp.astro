---
import projectList from '../data/projectList.json';
// import logoImg from "@/assets/fz-logo.png";
---

<!-- Masonry grid container using Tailwind CSS -->
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4">
    {projectList.map(project => (
        <div class="group relative cursor-pointer">
            <img src={project.image} alt={project.number} class="w-full object-cover rounded-md shadow-lg outline-2 p-10" />
            <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <p class="text-white text-lg">{project.title}</p>
            </div>
        </div>
    ))}
</div>